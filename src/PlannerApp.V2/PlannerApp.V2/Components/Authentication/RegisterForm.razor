@namespace PlannerApp.V2.Components

<EditForm Model="_model" OnValidSubmit="RegisterUserAsync">
    <FluentValidationValidator />

    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Create a new account</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudTextField Label="Email" HelperText="Required" @bind-Value="@_model.Email" />
            <MudTextField Label="FirstName" HelperText="Required" @bind-Value="@_model.FirstName" />
            <MudTextField Label="LastName" HelperText="Required" @bind-Value="@_model.LastName" />
            <MudTextField InputType="InputType.Password" HelperText="Required" Label="Password" @bind-Value="@_model.Password" />
            <MudTextField InputType="InputType.Password" HelperText="Required" Label="Confirm Password" @bind-Value="@_model.ConfirmPassword" />
            <ValidationSummary />
            @if (!string.IsNullOrWhiteSpace(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Class="my-2">@_errorMessage</MudAlert>
            }
        </MudCardContent>
        <MudCardActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Disabled="_IsBusy">Create Account</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Secondary" OnClick="RedirectToLogin" Class="ml-1" Disabled="_IsBusy">Login</MudButton>
        </MudCardActions>
    </MudCard>
</EditForm>
